<Window x:Class="ProgrammingSchool.Windowses.AboutUs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgrammingSchool.Windowses"
        mc:Ignorable="d"
        Title="AboutUs" Height="450" Width="800" Style="{StaticResource CustomWindowStyle}" Loaded="AboutUs_Loading">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock FlowDirection="RightToLeft" Grid.Row="0" Margin="8" FontFamily="/ProgrammingSchool;component/Assets/Fonts/#B Nazanin" FontSize="22" FontWeight="Bold">ما سفر نوآوری را تسریع می کنیم</TextBlock>
        <Label  x:Name="aboutUsLabel" VerticalAlignment="Top" FlowDirection="RightToLeft" Grid.Row="1" Margin="8" Height="{Binding Source=Content}" FontFamily="/ProgrammingSchool;component/Assets/Fonts/#B Nazanin" FontSize="19" ></Label>
        <Button Grid.Row="2" HorizontalAlignment="Left" Margin="20" VerticalAlignment="Center" Style="{StaticResource ButtonStyle1}" Click="Back_Clicked"  FontSize="22" >بازگشت</Button>
    </Grid>

</Window>
